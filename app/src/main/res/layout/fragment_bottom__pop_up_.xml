<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner_bottom_sheet"
    tools:context=".BottomSheet.Bottom_PopUp_Fragment">

    <ImageView
        android:id="@+id/close_inst_sheet"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35dp"
        android:src="@drawable/pop_up_line"
        android:layout_gravity="center"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_color"
        app:cardCornerRadius="11dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/bottom_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            android:gravity="center"
            android:padding="@dimen/_5dp"
            android:text="@string/abs_workout"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bg_color"
        app:cardCornerRadius="11dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/bottom_inst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            android:fontFamily="sans-serif-light"
            android:justificationMode="inter_word"
            android:padding="@dimen/_5dp"
            android:text="@string/abs_des"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>

