<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_11dp"
        app:cardElevation="@dimen/_3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/animationView_item"
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_80dp"
                android:background="@color/white"
                android:padding="@dimen/_5dp"
                android:src="@drawable/profile_age_save" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_5dp">

                <TextView
                    android:id="@+id/save_cal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:text="Awais Khan"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/save_cal_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  Years Old"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth : "
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/_12sp" />

                    <TextView
                        android:id="@+id/save_cal_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  Years Old"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Next Birthday : "
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/_12sp" />

                    <TextView
                        android:id="@+id/save_cal_up_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  Years Old"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>